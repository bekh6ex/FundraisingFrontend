<script type="text/javascript">
	var timer, bankDetailBannerClosed = false;
	$( document ).ready( function() {
		timer = window.setTimeout( function() {
			$( '#bank-detail-banner' ).fadeIn();
		}, 5000 );

		$( 'input' ).focus( function() {
			$( '#bank-detail-banner' ).fadeOut();
			clearTimeout( timer );
		} );

		// This is for our fake radio buttons
		$( 'label' ).click( function() {
			$( '#bank-detail-banner' ).fadeOut();
			clearTimeout( timer );
		} );

		$( '.banner-btn-close, .slide-toggle' ).click( function() {
			$( '#bank-detail-banner' ).fadeOut();
			bankDetailBannerClosed = false;
		} );

		$( 'body' ).on( 'click',  '#wlightbox-close', function () {
			if( !bankDetailBannerClosed ) {
				$( '#bank-detail-banner' ).fadeIn();
			}
		} );

		$( 'a.wlightbox' ).click( function() {
			$( '#bank-detail-banner' ).fadeOut();
			clearTimeout( timer );
		} );

		/* switch banner pages */
		$( '.switch-button' ).click( function() {
			$( '#bank-details' ).slideToggle();
		} );
	} );
</script>

