<script type="text/javascript">
	$( document ).ready( function() {
		var bankDetailBannerClosed = false,
			timer = window.setTimeout( function() {
				$( '.sliding-banner' ).fadeIn();
			}, 5000 );

		$( 'input, label' ).focus( function() {
			$( '.sliding-banner' ).fadeOut();
			clearTimeout( timer );
		} );

		$( '.banner-btn-close, .slide-toggle' ).click( function() {
			$( '.sliding-banner' ).fadeOut();
			bankDetailBannerClosed = false;
		} );

		$( 'body' ).on( 'click',  '#wlightbox-close', function () {
			if( !bankDetailBannerClosed ) {
				$( '.sliding-banner' ).fadeIn();
			}
		} );

		$( 'a.wlightbox' ).click( function() {
			$( '.sliding-banner' ).fadeOut();
			clearTimeout( timer );
		} );

		/* switch banner pages */
		$( '.switch-button' ).click( function() {
			var contentWrapper = $( '.content-wrapper' ),
				newValue = contentWrapper.css( 'top' ) === '0px'
                    ? '-4.4em' : '0em';
			contentWrapper.animate( { top: newValue } );
		} );
	} );
</script>

